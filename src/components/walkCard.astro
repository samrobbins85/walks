---
import { Image } from "astro:assets";
import FormattedDate from "./common/FormattedDate.astro";
import { Icon } from "astro-icon/components";
const { walk } = Astro.props;
---

<a
  href={`/walks/${walk.data.slug}`}
  class="border border-gray-200 rounded-lg overflow-hidden h-full flex flex-col group"
>
  <Image
    src={walk.data.cover}
    alt=""
    class="aspect-4/3 object-cover mb-2 w-full"
  />

  <div class="flex flex-col p-4 justify-between grow group-hover:bg-slate-50">
    <span class="font-medium text-lg h-16 line-clamp-2">{walk.data.title}</span>
    <div class="text-slate-500 text-sm flex gap-x-4 pt-3 justify-between">
      <div class="flex items-center gap-x-2">
        <Icon name="lucide:route" class="size-4" />
        <span>
          {walk.data.length} km
        </span>
      </div>

      <span class="text-sm text-slate-500 flex gap-x-2 items-center">
        <Icon name="lucide:calendar" class="size-4" />

        <FormattedDate date={walk.data.date} />
      </span>
    </div>
  </div>
</a>
